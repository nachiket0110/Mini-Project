<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects</title>
    <!-- Link the global navbar styles -->
    <link rel="stylesheet" href="/css/navbar.css" />
    <!-- Link the projects-specific styles -->
    <link rel="stylesheet" href="/css/listofprojects.css" />
  </head>
  <body>
    <!-- Include the Navbar Partial -->
    <%- include('partials/navbar') %>

    <div class="main-content">
      <div class="projects-container">
        <h1>Projects</h1>
        <div class="project-grid" id="projectGrid">
          <% for(let project of projects) { %>
          <div
            class="project-card"
            onclick="window.location.href=`/project/<%= project.id %>`"
          >
            <div class="project-name"><%- project.title %></div>
            <div class="project-info">
              Supervisor: <%- project.supervisor %>
            </div>
            <div class="project-info">
              Company: <%- project.company %>
            </div>
          </div>
          <% } %>
        </div>

        <% if (user && ["manager", "contractor", "admin"].includes(user.role)) { %>
        <div class="add-project-container">
          <a href="/project/addproject" class="add-project-btn">+ Add Project</a>
        </div>
        <% } %>
      </div>
    </div>

    <div class="footer">
      <p>&copy; 2024 Construction Management. All rights reserved.</p>
    </div>
    <script src="/js/navbar.js"></script>
  </body>
</html>
